#!/usr/bin/env php
<?php

declare(strict_types=1);

use Umodi\Di\Invoker;
use Umodi\ProgressWatcher\CliProgressWatcher;
use Umodi\UnitLoader\FileSystemUnitLoader;
use Umodi\UnitRunner;

include __DIR__ . '/../bootstrap.php';

$runner = new UnitRunner(
    new CliProgressWatcher(),
    new Invoker(),
    unitLoader: new FileSystemUnitLoader(__DIR__ . '/../example-tests'),
);
$runner->run();

exit(0);
